<h1>All Ships</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Class</th>
    <th>Captain</th>
    <th>Registered On</th>
    <th>Engine</th>
    <th># Engines</th>
    <th>Weight</th>
  </tr>
<% @ships.each do |ships| %>
  <tr>
    <td><%= ship.name %></td>
    <td><%= ship.type %></td>
    <td>
      <%= link_to "Captain" + @captain.last_name, captain_path(@captain) %>
    </td>
    <td><%= @planet.name %></td>
    <td><%= @engine.name %></td>
    <td><%= ship.num_engines %></td>
    <td><%= ship.weight %></td>
  </tr>
<% end %>
</table>

<%= link_to "New Ship", new_ship_path %>
